---
interface Props {
  degree: string;
  school: string;
  year: string;
}

const { degree, school, year } = Astro.props;
---

<div class="flex flex-col md:flex-row md:justify-between md:items-center mb-3 last:mb-0">
  <div>
    <h3 class="font-semibold text-neutral-900">{degree}</h3>
    <p class="text-neutral-600">{school}</p>
  </div>
  <p class="text-sm text-neutral-500">{year}</p>
</div>
