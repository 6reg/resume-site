---
interface Props {
  degree: string;
  school: string;
  year: string;
}

const { degree, school, year } = Astro.props;
---

<div class="bg-gradient-to-r from-neutral-50 to-transparent rounded-lg p-4 border border-neutral-100 hover:shadow-sm transition-shadow duration-300">
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-2">
    <div class="flex-1">
      <h3 class="font-bold text-neutral-900 text-lg">{degree}</h3>
      <p class="text-neutral-600 font-medium">{school}</p>
    </div>
    <p class="text-accent font-semibold text-sm bg-accent/10 px-3 py-1 rounded-full whitespace-nowrap">{year}</p>
  </div>
</div>
