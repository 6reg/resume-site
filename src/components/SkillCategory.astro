---
interface Props {
  category: string;
  skills: string;
}

const { category, skills } = Astro.props;
---

<div class="bg-gradient-to-r from-accent-light/10 to-transparent rounded-lg p-4 border border-accent/10">
  <div class="flex flex-col sm:flex-row sm:items-center gap-2">
    <span class="font-medium text-neutral-900 min-w-fit">{category}:</span>
    <span class="text-neutral-700 leading-relaxed">{skills}</span>
  </div>
</div>
