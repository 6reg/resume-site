---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="mb-0">
  <h2 class="text-2xl font-bold text-neutral-900 border-b-2 border-accent pb-3 mb-6 flex items-center gap-3">
    <span class="w-1 h-8 bg-accent rounded-full"></span>
    {title}
  </h2>
  <slot />
</section>
