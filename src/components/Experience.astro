---
interface Props {
  title: string;
  company: string;
  period: string;
  location: string;
  bullets: string[];
}

const { title, company, period, location, bullets } = Astro.props;
---

<div class="bg-gradient-to-r from-accent-light/20 to-transparent rounded-lg p-5 border border-accent/10">
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start mb-3">
      <div class="flex-1">
        <h3 class="text-lg font-semibold text-neutral-900 mb-1">{title}</h3>
        <p class="text-accent font-medium">{company}</p>
      </div>
      <div class="text-sm text-neutral-500 sm:text-right mt-2 sm:mt-0">
        <p class="font-medium">{period}</p>
        <p>{location}</p>
      </div>
    </div>
    <ul class="space-y-2 text-neutral-700">
      {bullets.map((bullet) => (
        <li class="flex items-start gap-3">
          <span class="text-accent mt-0.5 flex-shrink-0">âœ¨</span>
          <span class="leading-relaxed">{bullet}</span>
        </li>
      ))}
    </ul>
</div>
