---
interface Props {
  title: string;
  company: string;
  period: string;
  location: string;
  bullets: string[];
}

const { title, company, period, location, bullets } = Astro.props;
---

<div class="bg-gradient-to-r from-accent-light/30 to-transparent rounded-xl p-6 border-l-4 border-accent hover:shadow-md transition-shadow duration-300">
    <div class="flex flex-col lg:flex-row lg:justify-between lg:items-start mb-4">
      <div class="flex-1">
        <h3 class="text-xl font-bold text-neutral-900 mb-1">{title}</h3>
        <p class="text-accent font-semibold text-lg">{company}</p>
      </div>
      <div class="text-sm text-neutral-500 lg:text-right mt-2 lg:mt-0">
        <p class="font-medium">{period}</p>
        <p>{location}</p>
      </div>
    </div>
    <ul class="space-y-3 text-neutral-700">
      {bullets.map((bullet) => (
        <li class="flex items-start gap-4">
          <span class="text-accent mt-1 flex-shrink-0 text-lg">âœ¨</span>
          <span class="leading-relaxed">{bullet}</span>
      </li>
    ))}
  </ul>
</div>
