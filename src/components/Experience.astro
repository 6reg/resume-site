---
interface Props {
  title: string;
  company: string;
  period: string;
  location: string;
  bullets: string[];
}

const { title, company, period, location, bullets } = Astro.props;
---

<div class="mb-8 last:mb-0">
  <div class="flex flex-col md:flex-row md:justify-between md:items-start mb-2">
    <div>
      <h3 class="text-lg font-semibold text-neutral-900">{title}</h3>
      <p class="text-accent font-medium">{company}</p>
    </div>
    <div class="text-sm text-neutral-500 md:text-right mt-1 md:mt-0">
      <p>{period}</p>
      <p>{location}</p>
    </div>
  </div>
  <ul class="space-y-2 text-neutral-600">
    {bullets.map((bullet) => (
      <li class="flex items-start gap-3">
        <span class="text-accent mt-1 flex-shrink-0">âœ¨</span>
        <span>{bullet}</span>
      </li>
    ))}
  </ul>
</div>
